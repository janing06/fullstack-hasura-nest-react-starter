{
	"name": "client",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"steiger": "steiger ./src",
		"knip": "knip -c knip.config.jsonc",
		"ts-check": "tsc -b ./tsconfig.json",
		"lint": "biome lint --diagnostic-level=error --no-errors-on-unmatched",
		"lint:fix": "biome lint --write --no-errors-on-unmatched",
		"format": "biome format --write --no-errors-on-unmatched",
		"check-all": "npm run ts-check && npm run lint && npm run steiger && npm run knip"
	},
	"dependencies": {
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"knip": "^5.70.2",
		"steiger": "^0.5.11",
		"typescript": "~5.9.3",
		"vite": "^7.2.4"
	}
}
